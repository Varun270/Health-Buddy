<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      main {
        background-color: #171717;
      }
    </style>
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Login</title>
  </head>
  <body>
    <main class="min-h-screen grid place-content-center bg-stone-900">
      <div class="w-full p-4 flex items-center justify-center">
        <div class="bg-stone-600 py-6 px-10 sm:max-w-md w-full">
          <div
            class="sm:text-3xl text-2xl font-semibold text-center text-white mb-12"
          >
            Login Form
          </div>
          <form
            method="post"
            action="/login"
            enctype="multipart/form-data"
            class="form"
          >
            <div>
              <input
                type="email"
                name="email"
                class="focus:outline-none border-b p-1 w-full pb-2 border-sky-400 placeholder-gray-500 my-8 bg-stone-700 email"
                placeholder="Email Address"
              />
            </div>
            <div class="">
              <input
                type="password"
                name="password"
                class="focus:outline-none p-1 border-b w-full pb-2 border-sky-400 placeholder-gray-500 mb-8 bg-stone-700 password"
                placeholder="Password "
              />
            </div>
            <div class="flex justify-center my-6">
              <button
                class="rounded-full p-3 w-full sm:w-56 bg-white text-stone-900 text-lg font-semibold bg-stone-700"
              >
                Login
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>
    <script>
      const form = document.querySelector(".form");
      const emailField = document.querySelector(".email");
      const passwordField = document.querySelector(".password");

      const email = localStorage.getItem("email");
      const password = localStorage.getItem("password");

      if (email || password) {
        window.location.replace(`https://${window.location.hostname}`);
      }

      form.addEventListener("submit", (e) => {
        localStorage.setItem("email", emailField.value);
        localStorage.setItem("password", passwordField.value);
      });
    </script>
  </body>
</html>
